<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/sixWeekCoursesButton"
        android:layout_width="169dp"
        android:layout_height="72dp"
        android:layout_marginStart="121dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/material_dynamic_secondary50"
        android:text="Six-Weeks Courses"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sixMonthCoursesButton"
        tools:ignore="HardcodedText,TextSizeCheck" />

    <Button
        android:id="@+id/calculateFeesButton"
        android:layout_width="169dp"
        android:layout_height="72dp"
        android:layout_marginStart="121dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/material_dynamic_secondary50"
        android:text="Calculate Fees"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sixWeekCoursesButton"
        tools:ignore="HardcodedText,TextSizeCheck" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="381dp"
        android:layout_height="265dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cooks"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="394dp"
        android:layout_height="74dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="22dp"
        android:text="Empowering the Nation offers skills training to domestic workers and gardeners"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:ignore="HardcodedText,TextSizeCheck" />

    <Button
        android:id="@+id/sixMonthCoursesButton"
        android:layout_width="169dp"
        android:layout_height="72dp"
        android:layout_marginStart="121dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/material_dynamic_secondary50"
        android:text="Six-Month Courses"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="HardcodedText,TextSizeCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>