<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#657985"
    tools:context=".activity_course_details">

    <TextView
        android:id="@+id/courseTitle"
        android:layout_width="367dp"
        android:layout_height="64dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:text="Course Title"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/courseDetails"
        android:layout_width="369dp"
        android:layout_height="171dp"
        android:layout_below="@id/courseTitle"
        android:layout_marginStart="24dp"
        android:layout_marginTop="120dp"
        android:text="Course details here"
        android:textSize="24sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/courseTitle"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/backButton2"
        android:layout_width="119dp"
        android:layout_height="56dp"
        android:layout_below="@id/courseDetails"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="146dp"
        android:layout_marginTop="87dp"
        android:backgroundTint="#657985"
        android:text="Back"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/courseFeeTextView"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/courseFeeTextView"
        android:layout_width="157dp"
        android:layout_height="48dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="68dp"
        android:text="TextView"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/courseDetails" />

</androidx.constraintlayout.widget.ConstraintLayout>